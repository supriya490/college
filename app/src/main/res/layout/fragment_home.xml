<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.homeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8EDEF"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center_horizontal"
                android:text="Shri Ramswaroop Memorial College Of Engineering And Management"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/text_size1"
                android:layout_marginTop="36dp"
                android:gravity="center_horizontal"
                android:text="@string/aboutcollege"
                android:textColor="@color/textcolor"

                android:textSize="@dimen/text_size1"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@color/titlecolor">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="717dp"
                android:layout_marginTop="36dp"
                android:background="@color/textcolor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:gravity="center_horizontal"
                    android:text="Departments"
                    android:textColor="#ffff"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="#ffff">

                    <LinearLayout
                        android:layout_width="396dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Computer Science Engineering"
                            android:textColor="#E91E63"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Information Technology Engineering"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Electrical Engineering"
                            android:textColor="#E91E63"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Civil Engineering"
                            android:textColor="#D2C15479"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Mechanical Engineering"
                            android:textColor="#4CAF50"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginHorizontal="@dimen/text_size1"
                            android:layout_marginTop="36dp"
                            android:gravity="center_horizontal"
                            android:text="Electronic And Communication  Engineering"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size1"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey1" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="473dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="@dimen/text_size1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:gravity="center_horizontal"
                        android:text="Contact Details"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/title_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/text_size1"
                        android:layout_marginTop="36dp"
                        android:gravity="center_horizontal"
                        android:text="@string/app_name"
                        android:textColor="@color/textcolor"

                        android:textSize="@dimen/text_size1"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/text_size1"
                        android:layout_marginTop="36dp"
                        android:gravity="center_horizontal"
                        android:text="Tiwariganj ,Lucknow Uttarpradesh"
                        android:textColor="@color/textcolor"

                        android:textSize="@dimen/text_size1"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/map"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/map" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
